<Window x:Class="FF3Manip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FF3Manip"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,5,0,0"/> 
                </Style>
            </StackPanel.Resources>
            
            <Button Width="150" Click="StartManip">Altar Cave</Button>
            <Button Width="150" Padding="0" Click="StartManip">Land Turtle (Back up)</Button>
            
        </StackPanel>

    </Grid>
</Window>
